# Security Settings
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,marine-ng.vercel.app
SESSION_DOMAIN=.marine.ng
TRUSTED_PROXIES=*

# Monitoring & Logging
SENTRY_LARAVEL_DSN=

# Rate Limiting
THROTTLE_REQUESTS_PER_MINUTE=60
THROTTLE_AUTH_PER_MINUTE=5

# File Storage
MAX_UPLOAD_SIZE=10485760

# Database Performance
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=2000

# Queue Configuration
QUEUE_FAILED_DRIVER=database

# Cache Configuration
CACHE_PREFIX=marine_ng

# Session Configuration
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# Production URLs
API_URL=https://api.marine.ng

# Email Queue Settings
MAIL_QUEUE_CONNECTION=database
MAIL_QUEUE=emails

# Backup Settings
BACKUP_DISK=s3
BACKUP_SCHEDULE=daily

# Maintenance Settings
MAINTENANCE_SECRET=your-maintenance-secret
