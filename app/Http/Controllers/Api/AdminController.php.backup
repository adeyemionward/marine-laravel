            $totalRevenue = Subscription::where('status', 'active')->sum('amount');

            // Generate time series data for charts
            $userGrowthData = [];
            $listingGrowthData = [];
            $revenueData = [];

            for ($i = $days - 1; $i >= 0; $i--) {
                $date = Carbon::now()->subDays($i);
